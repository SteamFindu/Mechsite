extends layout

block content
  header.masthead(style='background-image: url("/images/modifiedKeyboards.jpg");')
    .intro-body
      .container
        .row
          .col-lg-8.mx-auto
            h1.brand-heading Mechsite
            p.intro-text A retailer of quality mechanical keyboard parts and accesories.
            button.btn.btn-primary.btn-lg.btn-default(type='button', href='/products') Products
