extends layout
block links
    link(rel='stylesheet', href='/stylesheets/Contact-Form-Clean.css')
block content
    section#contact
        .contact-clean(style='background-color: rgb(0,0,0);')
            form(method='post', style='background-color: rgb(0,0,0);' id='mainform')
                h2.text-center.text-white Contact us
                .form-group
                    input.form-control(type='text', name='name', placeholder='Name')
                .form-group
                    input.form-control.is-invalid(type='email', name='email', placeholder='Email')
                .form-group
                    textarea.form-control(name='message', placeholder='Message', rows='14')
                .form-group
                    button.btn.btn-primary(type='submit' name='submit') send

        div#server-results
block scripts
    script(src='/javascripts/form.js')

